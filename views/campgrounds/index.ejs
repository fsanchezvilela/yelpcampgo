<% include ../partials/header %>
  
  <% if(currentUser && currentUser.isAdmin) {%>
    <h1>You're an Admin  <%=currentUser.username%></h1>
  <% }%>
  
    <header class="jumbotron">
      <div class="container">
        <h1><span class ="glyphicon glyphicon-tent"></span> Welcome to YelpCamp!</h1>
        <p> View our hand-picked campgrounds from all over the world</p>
        <p>
           <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a> 
        </p>
      </div>
    </header>
    
    <div class ="row">
        <div class="col-lg-12">
          <h3>Our Most Popular Campgrounds!</h3>
        </div>
    </div>
  
    <div class= "row text-center" style="display:flex; flex-wrap: wrap;">
    
      <% campgrounds.forEach(function(campground){ %>
          <div class="col-md-3 col-sm-6">
            
            <div class ="thumbnail">
              
              <img src="<%= campground.image %>"> <!-- como devuelve el string de la imagen se usan quotes alrededor de la sintaxis de ejs render. -->
                  <div class="caption">
                      <h4><%= campground.name %></h4>
                  </div>
                  <p>
                      <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                  </p>
            </div>
            
          </div> 
      <% }); %>
    </div>
<% include ../partials/footer %>